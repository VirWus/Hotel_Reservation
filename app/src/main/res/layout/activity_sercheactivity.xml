<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8000">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/signinbg"/>



                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="fitXY"
                    android:background="#99000000"/>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">





                    <customfonts.MyTextView_Roboto_Bold
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choisir votre destination"
                        android:layout_gravity="center"
                        android:gravity="top|center"
                        android:textSize="18dp"
                        android:textColor="#fff"/>


                    <LinearLayout
                        android:id="@+id/location"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/round_border"
                        android:padding="15dp">


                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/ic_crime"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"/>




                        <customfonts.MyTextView_Roboto_Bold
                            android:id="@+id/changeLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Change Location"
                            android:textColor="#fff"
                            android:layout_marginLeft="10dp"


                            />

                    </LinearLayout>



                </LinearLayout>





            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#232A34">

                <customfonts.MyTextView_Roboto_Bold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dates"
                    android:textColor="#fff"
                    />


                <TextView
                    android:id="@+id/tvDatedep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="depart"
                    android:gravity="center"
                    android:textColor="#5D616A"
                    android:padding="20dp"/>

                <TextView
                    android:id="@+id/tvDatearr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="arrive"
                    android:gravity="center"
                    android:textColor="#5D616A"
                    android:padding="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#2c3039">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#2C3039"
                    android:padding="15dp">


                </LinearLayout>






                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginLeft="25dp"
                    android:background="#393D46"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#2C3039"
                    android:padding="15dp">

                    <customfonts.MyTextView_Roboto_Bold
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Adults"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#fff"
                        />


                    <customfonts.EditText_Roboto_Bold
                        android:id="@+id/nbradult"
                        android:layout_width="97dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
android:hint="2"
                        android:textColorHint="#ba404040"
android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="16dp"


                        />







                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="35dp"
                    android:background="#393D46"
                    />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#2C3039"
                    android:padding="15dp">

                    <customfonts.MyTextView_Roboto_Bold
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Children"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#fff"
                        />




                    <customfonts.EditText_Roboto_Bold
android:id="@+id/nbrenfant"
                        android:layout_width="97dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:hint="2"
                        android:textColorHint="#BA404040"
                            android:gravity="center"

                        android:textColor="#fff"
                        android:textSize="16dp"


                        />






                </LinearLayout>


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginLeft="25dp"
                    android:background="#393D46"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:background="#2C3039"
                    >

                    <customfonts.Button_Roboto_Medium
                        android:id="@+id/serche"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_rectangle_blue"
                        android:text="Search"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="20dp"
                        android:padding="15dp"/>




                </LinearLayout>







            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>




























